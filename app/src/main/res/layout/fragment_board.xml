<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".fragments.BoardFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

        <ListView
            android:id="@+id/boardListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="-1dp" />

        <ImageView
            android:id="@+id/writeBtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_wirite"
            android:layout_margin="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout1" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:background="@android:color/holo_blue_bright"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:backgroundTint="@color/secondary"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="5"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="@color/white">

            <ImageView
                android:id="@+id/homeTap"
                android:src="@drawable/ic_home"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background"
                app:tint="@color/secondary" />

            <ImageView
                android:id="@+id/boardTap"
                android:src="@drawable/ic_board"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background"
                app:tint="@color/secondary" />

            <ImageView
                android:id="@+id/clubTap"
                android:src="@drawable/ic_club"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background"
                app:tint="@color/secondary" />

            <ImageView
                android:id="@+id/chatTap"
                android:src="@drawable/ic_chat"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background"
                app:tint="@color/secondary" />

            <ImageView
                android:id="@+id/settingTap"
                android:src="@drawable/ic_settings"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/background"
                app:tint="@color/secondary" />

        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>